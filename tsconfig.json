{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@enums/*": ["typings/enums/*"],
            "@interfaces/*": ["typings/interfaces/*"],
            "@actions/*": ["typings/actions/*"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}